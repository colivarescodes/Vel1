<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/degradadopatente"
     >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/patente3"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:text="INGRESE PATENTE"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/patente1"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/textView1"
        android:layout_centerVertical="true"
        android:background="#FFFFFF"
        android:capitalize="characters"
        android:ems="10"
        android:focusable="true"
        android:gravity="center_vertical|center_horizontal"
        android:maxLength="2"
        android:nextFocusDown="@+id/patente2"
        android:textColor="#660000"
        android:textSize="25sp" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="18dp"
        android:src="@drawable/iconvel" />

    <Button
        android:id="@+id/btnEnviar"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/patente1"
        android:layout_alignRight="@+id/patente3"
        android:layout_below="@+id/patente3"
        android:layout_marginTop="14dp"
        android:background="#660000"
        android:text="Comenzar Sapeo"
        android:textColor="#FFFFFF" />

    <EditText
        android:id="@+id/patente2"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_alignBaseline="@+id/patente1"
        android:layout_alignBottom="@+id/patente1"
        android:layout_centerHorizontal="true"
        android:background="#FFFFFF"
        android:capitalize="characters"
        android:ems="10"
        android:gravity="center_vertical|center_horizontal"
        android:maxLength="2"
        android:nextFocusDown="@+id/patente3"
        android:textColor="#660000"
        android:textSize="25sp" />

    <EditText
        android:id="@+id/patente3"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_alignBaseline="@+id/patente2"
        android:layout_alignBottom="@+id/patente2"
        android:layout_alignRight="@+id/textView1"
        android:background="#FFFFFF"
        android:capitalize="characters"
        android:ems="10"
        android:inputType="number"
        android:gravity="center_vertical|center_horizontal"
        android:maxLength="2"
        android:textColor="#660000"
        android:textSize="25sp" />

</RelativeLayout>
