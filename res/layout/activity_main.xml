<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="0dp"
    android:gravity="top"
    android:orientation="vertical"
    android:scrollbars="vertical" >

    <RelativeLayout
        android:id="@+id/linearLayout90"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/bgtop"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:src="@drawable/msg" />

        <TextView
            android:id="@+id/sat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageView2"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="16dp"
            android:paddingLeft="10dp"
            android:text="Velocidad Max. Registrada"
            android:textColor="#FFFFFF"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:paddingTop="15dp"
            android:src="@drawable/msg" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/sat"
            android:layout_alignLeft="@+id/imageView3"
            android:paddingLeft="23dp"
            android:text="Registrando la Patente"
            android:textColor="#FFFFFF"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/estadogpsant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/sat"
            android:layout_below="@+id/imageView2"
            android:layout_marginRight="30dp"
            android:text="120 km/h"
            android:textColor="#000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/patenteMostrar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/estadogpsant"
            android:layout_alignBottom="@+id/estadogpsant"
            android:layout_alignRight="@+id/textView3"
            android:layout_marginRight="15dp"
            android:text="CW-ZJ 42"
            android:textColor="#000000"
            android:textSize="20sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/linearLayout2"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/linearLayout90"
        android:background="#FFFFFF"
        android:gravity="center_horizontal" >

        <TextView
            android:id="@+id/velLinea"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:text="89"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#000000"
            android:textSize="90sp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:paddingBottom="120dp"
            android:text="Velocidad Actual"
            android:textColor="#666666"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:paddingTop="100dp"
            android:text="Km/h"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#999999" />

        <TextView
            android:id="@+id/estadoGPS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:paddingBottom="180dp"
            android:paddingRight="50dp"
            android:text="Estado de GPS:" />

        <TextView
            android:id="@+id/velocidadChico"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView6"
            android:layout_centerHorizontal="true"
            android:text="0" />

        <TextView
            android:id="@+id/estadodato"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:paddingBottom="180dp"
            android:paddingLeft="120dp"
            android:text="Sin Definir" />

        <TextView
            android:id="@+id/distancia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/estadodato"
            android:layout_toLeftOf="@+id/estadoGPS"
            android:text="Distancia" />

        <TextView
            android:id="@+id/vRelativa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/textView6"
            android:text="0" />

        <TextView
            android:id="@+id/msegundos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/estadoGPS"
            android:layout_centerHorizontal="true"
            android:text="msegundos" />

    </RelativeLayout>
    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="#FFB973"
        android:orientation="horizontal"
        android:padding="5dp" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="33dp"
            android:layout_height="wrap_content"
            android:contentDescription="@string/Boton"
            android:src="@drawable/alert" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/Boton"
            android:paddingTop="3dp"
            android:text="Toda velocidad excedida serÃ¡ notificada a las autoridades pertinentes"
            android:textColor="#333333"
            android:textSize="13sp" />
    </LinearLayout>



</RelativeLayout>